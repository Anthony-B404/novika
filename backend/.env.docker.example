# ===========================================
# Novika Backend - Docker Production Config
# ===========================================

# Application
NODE_ENV=production
PORT=3333
HOST=0.0.0.0
APP_KEY=             # Generate with: node ace generate:key
LOG_LEVEL=info

# Database (use service name in Docker network)
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=         # Strong password required
DB_DATABASE=novika_db

# Redis (use service name in Docker network)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=      # Optional but recommended

# Mail (Resend)
RESEND_API_KEY=      # From resend.com
MAIL_FROM=Novika <noreply@novika.com>

# Frontend URL
FRONTEND_URL=https://novika.com

# CORS
ALLOWED_ORIGINS=https://novika.com

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=https://api.novika.com/auth/google/callback

# Mistral AI
MISTRAL_API_KEY=

# File Storage
DRIVE_DISK=local
