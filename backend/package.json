    "ffprobe-static": "^3.1.0",
    "ioredis": "^5.8.2",
    "luxon": "^3.7.2",
    "mjml": "^4.16.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
