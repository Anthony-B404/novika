    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "ts-node-maintained": "^10.9.6",
    "typescript": "~5.9"
  },
  "dependencies": {
    "@adonisjs/ally": "^5.1.1",
    "@adonisjs/auth": "^9.5.1",
    "@adonisjs/bouncer": "^3.1.6",
    "@adonisjs/core": "^6.19.1",
