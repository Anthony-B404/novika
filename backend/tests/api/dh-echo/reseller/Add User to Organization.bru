meta {
  name: Add User to Organization
  type: http
  seq: 9
}

post {
  url: {{baseUrl}}/reseller/organizations/{{resellerOrgId}}/users
  body: json
  auth: bearer
}

headers {
  Accept-Language: en
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "email": "new-org-member@example.com",
    "firstName": "New",
    "lastName": "Member",
    "role": 3
  }
}

assert {
  res.status: eq 201
  res.body: isJson
}

tests {
  test("should create user successfully", function() {
    const data = res.getBody();
    expect(data).to.have.property('message');
    expect(data).to.have.property('user');
  });

  test("should save user ID for later tests", function() {
    const data = res.getBody();
    bru.setVar("resellerOrgUserId", data.user.id);
    expect(data.user).to.have.property('id');
  });

  test("user should have correct data", function() {
    const data = res.getBody();
    expect(data.user.email).to.equal('new-org-member@example.com');
    expect(data.user.firstName).to.equal('New');
    expect(data.user.lastName).to.equal('Member');
    expect(data.user.role).to.equal(3);
  });
}
