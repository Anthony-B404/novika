meta {
  name: Delete Reseller Organization
  type: http
  seq: 13
}

delete {
  url: {{baseUrl}}/reseller/organizations/{{resellerOrgId}}
  body: none
  auth: bearer
}

headers {
  Accept-Language: en
}

auth:bearer {
  token: {{token}}
}

assert {
  res.status: eq 200
  res.body: isJson
}

tests {
  test("should soft delete organization successfully", function() {
    const data = res.getBody();
    expect(data).to.have.property('message');
    expect(data).to.have.property('organization');
  });

  test("organization status should be deleted", function() {
    const data = res.getBody();
    expect(data.organization.status).to.equal('deleted');
  });

  test("organization should have deletion details", function() {
    const data = res.getBody();
    expect(data.organization).to.have.property('deletedAt');
    expect(data.organization.deletedAt).to.not.be.null;
    expect(data.organization).to.have.property('daysUntilPurge');
    expect(data.organization.daysUntilPurge).to.equal(30);
  });
}
