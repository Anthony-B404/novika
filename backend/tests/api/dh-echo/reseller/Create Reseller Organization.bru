meta {
  name: Create Reseller Organization
  type: http
  seq: 4
}

post {
  url: {{baseUrl}}/reseller/organizations
  body: json
  auth: bearer
}

headers {
  Accept-Language: en
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "name": "Test Client Organization",
    "email": "client-org@example.com",
    "ownerEmail": "client-owner@example.com",
    "ownerFirstName": "Client",
    "ownerLastName": "Owner",
    "initialCredits": 50
  }
}

assert {
  res.status: eq 201
  res.body: isJson
}

tests {
  test("should create organization successfully", function() {
    const data = res.getBody();
    expect(data).to.have.property('message');
    expect(data).to.have.property('organization');
  });

  test("should save organization ID for later tests", function() {
    const data = res.getBody();
    bru.setVar("resellerOrgId", data.organization.id);
    expect(data.organization).to.have.property('id');
  });

  test("organization should have correct data", function() {
    const data = res.getBody();
    expect(data.organization.name).to.equal('Test Client Organization');
    expect(data.organization.email).to.equal('client-org@example.com');
    expect(data.organization).to.have.property('resellerId');
  });

  test("organization should have initial credits", function() {
    const data = res.getBody();
    expect(data.organization.credits).to.equal(50);
  });
}
