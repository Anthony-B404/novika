meta {
  name: Distribute Credits
  type: http
  seq: 7
}

post {
  url: {{baseUrl}}/reseller/organizations/{{resellerOrgId}}/credits
  body: json
  auth: bearer
}

headers {
  Accept-Language: en
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "amount": 100,
    "description": "Monthly credit allocation"
  }
}

assert {
  res.status: eq 200
  res.body: isJson
}

tests {
  test("should distribute credits successfully", function() {
    const data = res.getBody();
    expect(data).to.have.property('message');
    expect(data).to.have.property('resellerBalance');
    expect(data).to.have.property('organizationCredits');
  });

  test("balances should be numbers", function() {
    const data = res.getBody();
    expect(data.resellerBalance).to.be.a('number');
    expect(data.organizationCredits).to.be.a('number');
  });

  test("organization credits should increase", function() {
    const data = res.getBody();
    expect(data.organizationCredits).to.be.at.least(100);
  });
}
