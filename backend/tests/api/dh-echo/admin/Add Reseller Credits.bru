meta {
  name: Add Reseller Credits
  type: http
  seq: 6
}

post {
  url: {{baseUrl}}/admin/resellers/{{resellerId}}/credits
  body: json
  auth: bearer
}

headers {
  Accept-Language: en
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "amount": 500,
    "description": "Invoice #TEST-123"
  }
}

assert {
  res.status: eq 201
  res.body: isJson
}

tests {
  test("should add credits successfully", function() {
    const data = res.getBody();
    expect(data).to.have.property('message');
    expect(data).to.have.property('transaction');
    expect(data).to.have.property('newBalance');
  });
  
  test("should create transaction record", function() {
    const data = res.getBody();
    expect(data.transaction).to.have.property('id');
    expect(data.transaction).to.have.property('amount');
    expect(data.transaction.amount).to.equal(500);
    expect(data.transaction).to.have.property('type');
    expect(data.transaction.type).to.equal('purchase');
  });
  
  test("balance should increase", function() {
    const data = res.getBody();
    expect(data.newBalance).to.be.a('number');
    expect(data.newBalance).to.be.at.least(500);
  });
}
