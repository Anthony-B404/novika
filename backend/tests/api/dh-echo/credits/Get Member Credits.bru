meta {
  name: Get Member Credits
  type: http
  seq: 6
}

get {
  url: {{baseUrl}}/credits/members/{{targetUserId}}
  body: none
  auth: bearer
}

headers {
  Accept-Language: en
}

auth:bearer {
  token: {{token}}
}

assert {
  res.status: eq 200
  res.body: isJson
}

tests {
  test("should return member credit details", function() {
    const data = res.getBody();
    expect(data).to.have.property('userId');
    expect(data).to.have.property('balance');
    expect(data).to.have.property('creditCap');
    expect(data).to.have.property('autoRefillEnabled');
    expect(data).to.have.property('user');
  });

  test("balance should be a number", function() {
    const data = res.getBody();
    expect(data.balance).to.be.a('number');
  });

  test("user should have required fields", function() {
    const data = res.getBody();
    expect(data.user).to.have.property('id');
    expect(data.user).to.have.property('email');
  });
}
