meta {
  name: Distribute Credits
  type: http
  seq: 4
}

post {
  url: {{baseUrl}}/credits/distribute
  body: json
  auth: bearer
}

headers {
  Accept-Language: en
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "userId": {{targetUserId}},
    "amount": 50,
    "description": "Monthly allocation"
  }
}

assert {
  res.status: eq 200
  res.body: isJson
}

tests {
  test("should distribute credits successfully", function() {
    const data = res.getBody();
    expect(data).to.have.property('message');
    expect(data).to.have.property('transaction');
    expect(data).to.have.property('userBalance');
    expect(data).to.have.property('organizationCredits');
  });
  
  test("should create transaction record", function() {
    const data = res.getBody();
    expect(data.transaction).to.have.property('id');
    expect(data.transaction).to.have.property('amount');
    expect(data.transaction.amount).to.equal(50);
    expect(data.transaction.type).to.equal('distribution');
  });
  
  test("balances should be numbers", function() {
    const data = res.getBody();
    expect(data.userBalance).to.be.a('number');
    expect(data.organizationCredits).to.be.a('number');
  });
}
