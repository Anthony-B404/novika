meta {
  name: Update Module
  type: http
  seq: 3
}

put {
  url: {{baseUrl}}/modules/1
  body: json
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "name": "Mathématiques Avancées"
  }
}

tests {
  test("response status is 200") {
    expect(response.status).toBe(200)
  }
  
  test("response has updated module data") {
    expect(response.body).toHaveProperty("module")
    expect(response.body.module.name).toBe("Mathématiques Avancées")
    expect(response.body.module.description).toBe("Module de mathématiques mis à jour")
  }
}
