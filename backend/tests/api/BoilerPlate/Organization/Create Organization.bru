meta {
  name: Create Organization
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/organizations
  body: multipartForm
  auth: bearer
}

headers {
  Accept-Language: en
}

auth:bearer {
  token: {{token}}
}

body:multipart-form {
  organization: {"name":"New Test Organization","email":"neworg@test.com"}
}

assert {
  res.status: eq 201
  res.body: isJson
}

tests {
  test("should create organization successfully", function() {
    const data = res.getBody();
    expect(data).to.have.property('message');
    expect(data).to.have.property('organization');
    expect(data.organization).to.have.property('id');
    expect(data.organization.name).to.equal('New Test Organization');
  });
  
  test("should save organization ID for later tests", function() {
    const data = res.getBody();
    bru.setVar("newOrgId", data.organization.id);
  });
}
